<div class="hero">
  <div class="hero-body">

      <div class="columns">
        <div class="column is-8 is-offset-2">

          <h1 class="title has-text-centered">新規投稿</h1>
          <div class="box">
            <%= form_with model: @post do |f| %>
            <div class="form has-text-centered">

              <div class="field">
                <div class="control">
                  <label for="title">タイトル</label>
                </div>
                <%= f.text_field :title, class: "input is-medium is-primary" %>
              </div>

              <div class="field">
                <div class="control">
                <label for="description">説明</label>
                <%= f.text_field :description, class:"input is-medium is-primary" %>
                </div>
              </div>


              

              <div class="field">
                <div class="control">
                  <%#= f.label :post, "タグ" %>
                  <%#= f.text_field :tag_list, value: @post.tag_list.join(','), class:"input is-primary is-small" %>
                  <%#= f.text_field :tag_list, value: post.tag_list.join(','), class: "input is-primary is-medium" %>
                  </div>
                </div>

                <%= f.submit '投稿', class:"button is-primary" %>


            </div>
            <% end %>

          </div>
        </div>
      </div>
      </div>
      </div>